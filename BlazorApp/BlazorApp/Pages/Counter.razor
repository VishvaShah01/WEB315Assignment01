@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>Increment Amount: @IncrementAmount</p>

<h4> High Score: @currentCount</h4>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-danger" @onclick="ResetClicks">Reset</button>
<button class="btn btn-primary" @onclick="DecrementClicks">Decreased by 1</button>




@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;

    [Parameter]
    public int DecrementAmount { get; set; } = 1;

    
    private void IncrementCount()
    {if(currentCount < 20){
      currentCount += IncrementAmount;
      }
    }
   
    private void ResetClicks()
    {
      currentCount = 0;
    }

       private void DecrementClicks()
    { 
      if(currentCount > 1){
        currentCount--;
      }
    }
}
